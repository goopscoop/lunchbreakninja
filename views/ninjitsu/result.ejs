<% include ../partials/header %>
<% include ../partials/nav %>

<div class="row">
  <h1>Your lunch break has been <em>ninja'd!</em></h1>
</div>
<div class="jumbotron">
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div id='map'></div>
        <script>
console.log(<%= finalPick[0].location.coordinate.latitude %>, <%= finalPick[0].location.coordinate.longitude %>)
          var myPoints = [{lat: <%= finalPick[0].location.coordinate.latitude %>, lng: <%= finalPick[0].location.coordinate.longitude %>, name: '<%= finalPick[0].name %>' }];
          drawMap(myPoints)
        </script>
      <!-- <img class='img-responsive img-rounded' src="http://www.fillmurray.com/460/300"> -->
      <p>map goes here</p>
    </div>
    <div class="col-md-6">
      <h2><a href='<%= finalPick[0].url %>'><%= finalPick[0].name %></a></h2>
      <ul>
        <li>
          <% finalPick[0].categories.forEach(function(item, pos){ %>
          <em><%= finalPick[0].categories[pos][0] %></em>
            <% if(pos < (finalPick[0].categories.length - 1)){%>, <% } %>
          <% }) %>
        </li>
      </ul>
      <p><img src='<%= finalPick[0].rating_img_url %>'></p>
      <div class="row">
        <div class="col-md-5 col-md-offset-1">
          <p><strong><%= finalPick[0].location.display_address[0] %></strong></p>
          <p><%= finalPick[0].location.display_address[1] %></p>
          <p><%= finalPick[0].display_phone %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="buttons">
  <div class="text-center">
  <form>
    <button class='btn btn-lg btn-success'>I'm eating here!</button>
  </form>
  <form>
    <button class='btn btn-default'>Try again</button>
  </form></div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <blockquote>
      <img class='img-responsive img-rounded pull-left quote-img' src='<%= finalPick[0].snippet_image_url %>'>
      <p>"<%= finalPick[0].snippet_text %>" <br><a href='<%= finalPick[0].url %>'><em>Read More...</em></a></p>
      </blockquote>
    </div>
  </div>
</div>
<% include ../partials/footer %>